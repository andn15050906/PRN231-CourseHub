@page
@model CourseHub.UI.Pages.User.SignInModel

@{
    Layout = "_OuterAuthLayout";
    ViewData[Global.TITLE] = "Sign In";
}

@section NavButton {
    <button class="btn white-btn" onclick="register()">Register</button>
}

<!----------------------------- Form box ----------------------------------->
<form method="post">
    <div class="form-box">
        <div class="login-container" id="login">
            <header>Sign In</header>

            @await Html.PartialAsync("Shared/_Alert")

            <div asp-validation-summary="All" class="alert alert-danger mt-5 fs-4 pageError text-center"></div>

            <div class="input-box">
                <input asp-for="Dto.UserName" class="input-field" placeholder="Username or Email">
                <i class="bx bx-user"></i>
            </div>
            <div class="input-box">
                <input asp-for="Dto.Password" type="password" class="input-field" placeholder="Password">
                <i class="bx bx-lock-alt"></i>
            </div>
            <div class="input-box">
                <input type="submit" class="submit" value="Sign In">
            </div>


            <div style="display: flex; flex-direction: column; align-items: center;">
                <p style="margin: 16px; color: #fff;"> Or </p>
                <a class="btn btn-light" id="app-google-btn" href="#" role="button" style="text-transform:none; display:flex">
                    <div style="margin-bottom:3px; margin-right:5px; display:flex">
                      <svg width="20"  version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                        <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                        <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                        <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                        <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                        <path fill="none" d="M0 0h48v48H0z"></path>
                      </svg>
                    </div>
                    <div style="display:flex">Google Sign In</div>
                    <!--<img alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />-->
                </a>
            </div>



            <div class="two-col">
                <div class="one">
                    <input asp-for="RememberMe" type="checkbox">
                    <label asp-for="RememberMe">Remember Me</label>
                </div>
                <div class="two">
                    <label><a href="@Global.PAGE_FORGOT_PASSWORD">Forgot password?</a></label>
                </div>
            </div>
            <div class="top">
                <span>Don't have an account? <a href="#" onclick="register()">Sign Up</a></span>
            </div>
        </div>
    </div>
</form>


<script>        
    var googleHref = "@Model.GoogleOAuthBasePath" + "0";
    document.getElementById('app-google-btn').href = googleHref;



    function register() {
        /**/
        window.location.href = "@Global.PAGE_REGISTER";
    }
</script>