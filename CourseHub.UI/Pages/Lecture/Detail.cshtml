    }

    #app-form textarea {
        width: 100%;
        font-size: 15px;
        padding-left: 20px;
        padding-top: 12px;
        height: 110px;
        border: none;
        border-radius: 5px;
        resize: none;
    }

    .review__submit-button {
        font-size: 11px;
        color: #ffffff;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        background: dodgerblue;
        border: none;
        padding: 10px 15px;
        border-radius: 2px;
        float: right;
    }

    .review__submit-button:hover {
        cursor: pointer;
    }

    .app__review__item {
        display: flex;
    }




    .app__review__item__text {
        flex-grow: 1;
    }

    .app__review__item .dropdown {
        position: absolute;
        right: -10px;
        width: 30px;
        text-align: center;
    }

    .app__review__item .dropdown li {
        display: block;
    }

    .app__review__item .dropdown li a {
        display: block;
        text-align: center;
    }

    .app__review__item .dropdown li a:hover{
        cursor: pointer;
    }

    .fa-ellipsis-v::after {
        display: none;
    }
