<style>
    .u-detail-block-title span {
        color: #fff !important;
    }

    .embed-responsive {
        overflow: unset;
        /*padding-bottom: 0 !important;*/
    }

    .embed-responsive-16by9::before{
        padding-top: 0 !important;
    }

    .app-video-wrapper {
        width: 600px;
